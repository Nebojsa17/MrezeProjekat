<Window x:Class="Castle_Defense_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Castle_Defense_Client.Elements"
        mc:Ignorable="d"
        Title="Castle Defender" Height="800" Width="1500" HorizontalAlignment="Center" VerticalAlignment="Center" WindowStartupLocation="CenterScreen">

    <TabControl Background="Black" SelectionChanged="TabControl_SelectionChanged">
        <TabControl.Resources>
            <Style TargetType="TabItem">
                <Setter Property="Visibility" Value="Collapsed"/>
            </Style>
        </TabControl.Resources>

        <!-- UVODNA SEKCIJA -->
        <TabItem  x:Name="Meni" IsSelected="True">
            <Grid Background="Gray">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="CASTLE DEFENDERS" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="100" FontFamily="Cascadia Mono" FontWeight="Bold" Background="#4CDEF3ED" Margin="-8,0,0,0" Width="1100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Label.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="1"/>
                            <GradientStop Color="White"/>
                            <GradientStop Color="#FF1BC3D7" Offset="0.567"/>
                        </LinearGradientBrush>
                    </Label.Foreground>
                </Label>
                <DockPanel Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0" Margin="50,0,50,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- SERVER CONNECT DUGME -->
                            <Button x:Name="ServerConnect" Click="ConnectBtn_Click" Content="CONNECT" Background="LightGray" MinHeight="100" MinWidth="250" FontSize="24" FontWeight="Bold"></Button>
                        </DockPanel>
                        <DockPanel Grid.Row="1" Margin="50,0,50,0" VerticalAlignment="Center" HorizontalAlignment="Center">
                            <!-- GAME CLOSE DUGME -->
                            <Button x:Name="close" Click="close_Click" Content="CLOSE" Background="LightGray" MinHeight="100" MinWidth="250" FontSize="24" FontWeight="Bold"></Button>
                        </DockPanel>
                        <DockPanel Grid.Row="3" Margin="20,0,20,10" Background="LightGray" LastChildFill="False" VerticalAlignment="Bottom">
                            <!-- LOGGER -->
                            <Label x:Name="Logger" Content="LOG:" Margin="10,0,0,0" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontWeight="Bold"/>
                        </DockPanel>
                    </Grid>
                </DockPanel>
            </Grid>
        </TabItem>

        <!-- GAME SEKCIJA -->
        <TabItem x:Name="Game">
            <Grid Background="Gray">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2.5*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <DockPanel Background="WhiteSmoke" Grid.Row="0" Width="1350" Height="530">
                    <local:DrawingPanel x:Name="Screen" MouseDown="Screen_MouseDown" Width="1350" Height="530" ClipToBounds="True"></local:DrawingPanel>
                </DockPanel>

                <Grid Grid.Row="1" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.15*"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <DockPanel Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="70,0,0,0">
                            <DockPanel Background="LightGray" Height="110" VerticalAlignment="Top">
                                <local:DrawingPanel x:Name="CardSpace" Width="600" Height="110" MouseDown="choosenCard_MouseDown" ClipToBounds="True"></local:DrawingPanel>
                            </DockPanel>
                            <!--IZBOR CARATA-->
                            <TextBox x:Name="choosenCard" BorderThickness="5" Margin="0,0,0,0" PreviewTextInput="NumberBox_PreviewTextInput" Width="40" Height="70" FontSize="44" BorderBrush="Black">0</TextBox>
                        </DockPanel>
                        <Grid Grid.Row="1" Margin="70,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <!-- BUTTONS -->
                            <Button Grid.Row="0" Grid.Column="0" x:Name="discard_btn" Margin="0,10,10,0" FontSize="20" Click="discard_btn_Click">DISCARD</Button>
                            <Button Grid.Row="1" Grid.Column="0" x:Name="pass_btn" Margin="0,10,10,0" FontSize="20" Click="pass_btn_Click">PASS</Button>
                            <Button Grid.Row="0" Grid.Column="1" x:Name="play_btn" Margin="0,10,10,0" FontSize="20" Click="play_btn_Click">PLAY</Button>
                            <Button Grid.Row="1" Grid.Column="1" x:Name="swap_btn" Margin="0,10,10,0" FontSize="20" Click="swap_btn_Click">SWAP</Button>

                            <DockPanel Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left">
                                <Label VerticalAlignment="Center" FontSize="20">UDP:</Label>
                                <!--ZA KONEKCIJU-->
                                <TextBox x:Name="udpVezaMenjanja" Width="200" Height="37" FontSize="24">xxx.xxx.xx.x</TextBox>
                            </DockPanel>
                            <DockPanel Grid.Row="0" Grid.Column="2" HorizontalAlignment="Left">
                                <Label VerticalAlignment="Center" FontSize="20">TRAKA:</Label>
                                <!--IZABRANA TRRAKA-->
                                <TextBox x:Name="unetaTraka" Width="20" Height="37" FontSize="24" PreviewTextInput="NumberBox_PreviewTextInput">0</TextBox>
                                <Label VerticalAlignment="Center" FontSize="20">STAZA:</Label>
                                <!--IZABRANA STAZA-->
                                <TextBox x:Name="unetaStaza" Width="20" Height="37" FontSize="24" PreviewTextInput="NumberBox_PreviewTextInput">0</TextBox>
                                <Label VerticalAlignment="Center" FontSize="20">NEPRIJATELJ:</Label>
                                <!--IZABRAN NEPRIJATELJ-->
                                <TextBox x:Name="unetNeprijatelj" Width="20" Height="37" FontSize="24" PreviewTextInput="NumberBox_PreviewTextInput">0</TextBox>
                            </DockPanel>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1" Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="4*"/>
                            <RowDefinition Height="1.5*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <!-- ZA PRIKAZ UDP UTICNICA I DISCONNECT I LOG -->
                        <Label x:Name="playerList" Content="MI: xxx.xxx.xx.x &#10;P2: xxx.xxx.xx.x &#10;P3: xxx.xxx.xx.x" HorizontalAlignment="Left" Margin="30,0,0,0" FontSize="20"/>
                        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" x:Name="disconect_btn" Margin="35,5,40,5" FontSize="20" Click="DisconnectBtn_Click">DISCONNECT</Button>
                        <TextBox x:Name="gameLog" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Background="LightGray" Margin="30,0,40,5" FontSize="24" AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto">LOG:</TextBox>
                    </Grid>
                </Grid>
            </Grid>
        </TabItem>
    </TabControl>
    

   
    
</Window>
