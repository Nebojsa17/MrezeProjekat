<Window x:Class="Castle_Defense_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Castle_Defense_Client.Elements"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1000">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <DockPanel Background="DarkGray" Grid.Row="1" Margin="10" Width="950" Height="450">
            <local:DrawingPanel x:Name="Screen" Width="950" Height="450" ClipToBounds="True"></local:DrawingPanel>
        </DockPanel>
    </Grid>
</Window>
